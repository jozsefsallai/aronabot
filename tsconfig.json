{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "strict": true,
    "skipLibCheck": true,
    "target": "es2020",
    "typeRoots": ["./node_modules/@types"],
    "jsx": "react"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./src/**/*.d.ts", "./src/**/*.tsx"]
}
